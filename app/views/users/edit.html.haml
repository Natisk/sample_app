- provide(:title, 'Edit user')
.page-header.col-xs-12.col-md-8.col-sm-8.col-sm-offset-2
  %h1 Edit profile
.row
  .col-xs-12.col-md-8.col-sm-8.col-sm-offset-2
    = form_for(@user, html: {class: 'form-horizontal' }) do |f|
      .form-group
        = f.label :name, class: 'col-sm-2 control-label'
        .col-sm-10
          = f.text_field :name, class: 'form-control', required: true
      .form-group
        = f.label :email, class: 'col-sm-2 control-label'
        .col-sm-10
          = f.email_field :email, required: true, class: 'form-control'
      .radio
        - User::ROLES.each do |role|
          .col-sm-10
            = label_tag do
              = f.radio_button :role, "#{role}"
              #{role}
      .form-group
        .col-sm-10
          .gravatar_edit
            = gravatar_for @user
            %a{href: 'http://gravatar.com/emails'} change
      .form-group
        .col-sm-10.col-sm-offset-2
          = f.submit 'Save changes', class: 'btn btn-success'
          = link_to 'delete', @user , method: :delete, data: { confirm: 'You sure?' }, class: 'btn btn-danger'