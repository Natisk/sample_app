= form_for(@micropost, html: { multipart: true, class: 'form' }) do |f|
  = render 'shared/error_messages', object: f.object
  .form-group
    = f.text_area :content, placeholder: 'Compose new micropost...', class: 'form-control ckeditor'
    %span.picture
      = f.file_field :picture, accept: 'image/jpeg,image/gif,image/png'
  .form-group
    = f.button 'Post', class: 'btn btn-add-post'
