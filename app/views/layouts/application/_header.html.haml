%body
  %header.navbar.navbar-fixed-top.navbar-inverse
    .container
      = link_to root_path, id: 'logo' do
        %img{ src: '/assets/favicon-32x32.png' }
        Fox on Rails
      %nav
        %ul.nav.navbar-nav.navbar-right.nav-header
          %li= link_to 'Home', root_path
          %li= link_to 'Abyss', abyss_path
          - if user_signed_in?
            %li= link_to 'Live chat', chat_rooms_path
            %li= link_to 'Users', users_path
            %li.dropdown
              %a#dropdown.dropdown-toggle{'data-toggle': 'dropdown', href: '#'}
                = gravatar_for current_user, 20
                %b.caret
              %ul.dropdown-menu
                %li= link_to 'Profile', current_user
                %li= link_to 'Conversations', conversations_path
                %li= link_to 'Settings', edit_user_registration_path(current_user)
                %li.divider
                %li
                  = link_to 'Log out', logout_path, method: :delete
          - else
            %li= link_to 'Log in', login_path
