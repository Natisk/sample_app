- provide(:title, 'Forgot password')
.page-header
  %h1 Forgot password
.row
  .col-md-6.col-md-offset-3
    = form_for :password_reset, url: password_resets_path, html: {class: 'form' } do |form|
      .form-group
        = form.label :email
        = form.email_field :email, class: 'form-control'
      .form-group
        = form.submit 'Submit', class: 'btn btn-primary'
